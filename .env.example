# ============================================
# CYBERGUARD ENVIRONMENT CONFIGURATION
# ============================================

# === OPERATION MODE ===
# Set to 'false' for production with real OpenStack
MOCK_MODE=true

# === OPENSTACK CREDENTIALS ===
# Required when MOCK_MODE=false
OS_AUTH_URL=https://your-openstack-server:5000/v3
OS_USERNAME=your_username
OS_PASSWORD=your_password
OS_PROJECT_ID=your_project_id
OS_REGION_NAME=RegionOne
OS_USER_DOMAIN_NAME=Default
OS_PROJECT_DOMAIN_NAME=Default

# === WORKER CONFIGURATION ===
# Number of max concurrent lab deployments
WORKER_CONCURRENCY=3
WORKER_LOG_LEVEL=INFO

# === WEB UI SECURITY ===
SECRET_KEY=random-string

# === OPTIONAL: DATABASE ===
# Uncomment to use PostgreSQL instead of SQLite
# DB_PASSWORD=postgres_password

# === DEBUGGING ===
DEBUG_MODE=false
FLASK_ENV=production
